<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<!-- 全局的缓存映射器 -->
        <setting name="cacheEnabled" value="true"/>
        <!-- 启用/禁用延时加载，禁用时，所有关联对象都会即时加载 -->
        <setting name="lazyLoadingEnabled" value="false"/>
        <!-- 当启用时，有延迟加载属性的对象在被调用时将会被完全加载任意属性。否则每种属性将会按需要加载 -->
        <setting name="aggressiveLazyLoading" value="true"/>
    </settings>
	<!-- 为方便操作数据 配置一个继承于hashMap 的 Record 类  -->
	<typeAliases>
		<typeAlias alias="dataRecord" type="cn.wizzer.app.wb.modules.common.nutzMybatis.dto.DataRecord" />
		<typeAlias alias="dataRecordUp" type="cn.wizzer.app.wb.modules.common.nutzMybatis.dto.DataRecordUp" />
		<typeAlias alias="dataRecordLow" type="cn.wizzer.app.wb.modules.common.nutzMybatis.dto.DataRecordLow" />
	</typeAliases>
</configuration>